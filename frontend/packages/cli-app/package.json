{
  "name": "@manuel/cli-app",
  "version": "1.2.0",
  "description": "Manuel Voice Assistant - CLI Application",
  "main": "dist/index.js",
  "bin": {
    "manuel": "dist/bin/manuel.js"
  },
  "scripts": {
    "start": "ts-node src/bin/manuel.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "dev": "ts-node-dev --respawn --transpile-only src/bin/manuel.ts",
    "install:global": "npm link",
    "uninstall:global": "npm unlink",
    "release": "npm pack",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@manuel/shared": "^1.0.0",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "dotenv": "^16.3.1",
    "figlet": "^1.6.0",
    "glob": "^10.3.3",
    "inquirer": "^9.2.8",
    "mime-types": "^2.1.35",
    "ora": "^5.4.1",
    "progress": "^2.0.3",
    "table": "^6.8.1",
    "update-notifier": "^5.1.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.6",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.4",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^20.5.0",
    "@types/progress": "^2.0.5",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "manuel",
    "voice-assistant",
    "cli",
    "pdf",
    "manuals",
    "aws",
    "bedrock"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "private": true
}
